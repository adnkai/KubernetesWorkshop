@page
@model IndexModel
@using Frontend2._0.Models
@{
  ViewData["Title"] = "Home page";
  IEnumerable<WeatherForecast> forecasts = (IEnumerable<WeatherForecast>)ViewData["forecasts"];
}

<div class="text-center">
  <h1 class="display-4">Welcome</h1>
  <p>This page calls the WeatherForecast API on the backend-service.</p>
</div>

@if (forecasts == null)
{
  <p><em>Loading...</em></p>
}
else
{
  <table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Temp. (C)</th>
            <th>Temp. (F)</th>
            <th>Summary</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var forecast in forecasts)
        {
          <tr>
            <td>@forecast.Date.ToShortDateString()</td>
            <td>@forecast.TemperatureC</td>
            <td>@forecast.TemperatureF</td>
            <td>@forecast.Summary</td>
          </tr>
        }
    </tbody>
  </table>
}
